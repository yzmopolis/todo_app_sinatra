
<form action="/edit/<%= @item[:id] %>" class="form-inline" method="POST">
  <div class="field">
    <div class="control">
      <input type="text" class="input is-medium" placeholder="<%= @item[:content] %>" name="content">
      <div class="buttons has-addons is-centered">
        <button type="submit" class="button is-light is-medium">Save</button>
      </div>
    </div>
  </div>
</form>